# ===================
# DATABASE SETTINGS
# ===================
DATABASE_URL=postgresql://telegram_tickets:password@localhost:5432/telegram_tickets
REDIS_URL=redis://localhost:6379/0

# ===================
# TELEGRAM BOT SETTINGS
# ===================
# Получить токен у @BotFather
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrSTUvwxyz123456789

# URL для webhook (оставить пустым для long polling)
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/webhook

# ===================
# JWT AUTHENTICATION
# ===================
# Сгенерировать: openssl rand -hex 32
JWT_SECRET_KEY=your_super_secret_jwt_key_here_32_characters_long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ===================
# APPLICATION SETTINGS
# ===================
# Режим разработки (True/False)
DEBUG=True

# Окружение (development/staging/production)
ENVIRONMENT=development

# Хост и порт для веб-сервера
HOST=127.0.0.1
PORT=8000

# URL фронтенда (для CORS)
FRONTEND_URL=https://yourdomain.com

# ===================
# FILE STORAGE
# ===================
# Локальная папка для загрузки файлов
UPLOAD_PATH=./uploads

# Максимальный размер файла (в байтах) - 10MB
MAX_FILE_SIZE=10485760

# Разрешенные расширения файлов
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,txt,doc,docx,zip,rar

# ===================
# WEBSOCKET SETTINGS
# ===================
# Интервал ping для WebSocket (секунды)
WS_HEARTBEAT_INTERVAL=30

# Максимальное количество WebSocket подключений
WS_MAX_CONNECTIONS=1000

# ===================
# SMTP SETTINGS (опционально)
# ===================
# Настройки для отправки email уведомлений
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=Telegram Ticket Bot

# ===================
# EXTERNAL INTEGRATIONS
# ===================
# Sentry для мониторинга ошибок (опционально)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# S3 для файлового хранилища (опционально)
S3_BUCKET_NAME=telegram-tickets-files
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_REGION=us-east-1

# ===================
# ADMIN SETTINGS
# ===================
# Telegram ID главного администратора
ADMIN_TELEGRAM_ID=123456789

# ===================
# NOTIFICATION SETTINGS
# ===================
# Включить/выключить различные уведомления
ENABLE_TELEGRAM_NOTIFICATIONS=True
ENABLE_EMAIL_NOTIFICATIONS=False

# Канал для системных уведомлений (опционально)
NOTIFICATION_CHANNEL_ID=-1001234567890

# ===================
# RATE LIMITING
# ===================
# Лимиты для API (запросов на пользователя в минуту)
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ===================
# BACKUP SETTINGS
# ===================
# Настройки автоматического бекапа БД
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ===================
# LOGGING SETTINGS
# ===================
# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Путь к файлу логов
LOG_FILE=./logs/app.log